<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Login</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Some styling :) -->
    <style>
        body {
            background-color: #121212; /* Dark background */
            color: #ffffff; /* White text */
        }

        .btn-green, header {
            background-color: #082f14; /* Dark green */
            color: #ffffff; /* White text */
        }

        .btn-green:hover {
            background-color: #006941; /* Slightly brighter green for hover */
        }

        .input-dark {
            background-color: #1E1E1E; /* Dark input background */
            color: #ffffff; /* White text */
        }
    </style>
</head>

<body class="bg-darkbg text-white min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-green-950 p-4">
        <a href="/"><h1 class="text-2xl font-bold text-center text-white">University of Greenfield</h1></a>
    </header>

    <!-- Main Content -->
    <main class="flex-grow flex flex-col items-center justify-center p-4">
        <h2>Student Login</h2>
        <div class="w-full max-w-md p-8 space-y-8">

            <!-- login form -->
            <form class="space-y-6" action="/studentLogin" method="POST">

                <!-- when the user clicks in the boxes, it'll light up -->
                 <!-- Email -->
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-300">Email</label>
                    <input type="email" id="email" name="email" required
                        class="mt-1 block w-full px-3 py-2 input-dark border border-gray-600 rounded-md placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500">
                </div>
                <!-- Password -->
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-300">Password</label>
                    <input type="password" id="password" name="password" required
                    class="mt-1 block w-full px-3 py-2 input-dark border border-gray-600 rounded-md placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500">
                    
                </div> 
                <!-- two step Authentication -->
                <div>
                    <label for="twoStepAuth" class="block text-sm font-medium text-gray-300">Two Step Authentication</label>
                    <input type="text" id="twoStepAuth" name="twoStepAuth" required
                        class="mt-1 block w-full px-3 py-2 input-dark border border-gray-600 rounded-md placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500">
                </div>

                <div>
                    <button type="submit"
                        class="btn-green w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium transition duration-300 ease-in-out transform hover:scale-105">
                        Login
                    </button>

                </div>

            </form>

        </div>

    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>
</body>
</html>
