<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap');
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-900 text-gray-100">
    <div class="container mx-auto p-4">
        <header class="flex justify-between items-center mb-6 border-b border-gray-700 pb-4">
            <nav>
                <ul class="flex space-x-4">
                    <li><a href="#" class="text-gray-400 hover:text-white">Home</a></li>
                    <li><a href="#" class="text-blue-500 font-semibold">Dashboard</a></li>
                </ul>
            </nav>
            <div class="flex items-center space-x-4">
                <a href="#" class="text-gray-400 hover:text-white">Help</a>
                <button class="text-yellow-500"><i data-feather="bell"></i></button>
                <button class="w-8 h-8 bg-gray-700 rounded-full"></button>
            </div>
        </header>

        <main class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <section class="space-y-4">
                <h2 class="text-xl font-semibold">Announcements</h2>
                <div id="announcementsContainer" class="space-y-2">
                    <!-- Dynamically populated with announcements -->
                     <% if (announcements && announcements.length > 0) { %>
                        <% announcements.forEach(announcement => { %>
                            <div class="bg-gray-700 rounded p-2">
                                <strong><%= announcement.title %></strong>: <%= announcement.message %>
                                <br>
                                <small class="text-white">Posted on <%= new Date(announcement.created_at).toLocaleString() %></small>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No announcements yet.</p>
                    <% } %>
                </div>
            </section>

            <section class="space-y-4">
                <h2 class="text-xl font-semibold">Enrolled courses</h2>
                <div class="grid grid-cols-2 gap-4">
                    <div class="bg-gray-800 p-4 rounded-lg">Course 1</div>
                    <div class="bg-gray-800 p-4 rounded-lg">Course 2</div>
                    <div class="bg-gray-800 p-4 rounded-lg">Course 3</div>
                    <button class="bg-green-600 p-4 rounded-full flex items-center justify-center">
                        <i data-feather="plus" class="w-6 h-6"></i>
                    </button>
                </div>
            </section>

            <section class="col-span-full">
                <h2 class="text-xl font-semibold mb-4">Schedule</h2>
                <div class="bg-gray-800 p-4 rounded-lg">
                    <h3 class="text-lg font-medium mb-2">Calendar</h3>
                    <!-- Placeholder for calendar -->
                    <div class="h-64 bg-gray-700 rounded-lg flex items-center justify-center">
                        Calendar content goes here
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script>
        feather.replace();
    </script>
</body>
</html>